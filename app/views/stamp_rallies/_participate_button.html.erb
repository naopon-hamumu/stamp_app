<div class="col-md-12">
  <% if user_signed_in? && current_user.participate?(stamp_rally) %>
    <%= link_to (t 'stamp_rallies.show.quit_participate'), stamp_rally_participant_path(stamp_rally),
                class: 'btn btn-danger',
                data: { "turbo-method": :delete } %>
  <% else %>
    <%= link_to (t 'stamp_rallies.show.participate'), stamp_rally_participant_path(stamp_rally),
                class: 'btn btn-primary',
                data: { "turbo-method": :post } %>
  <% end %>
</div>
