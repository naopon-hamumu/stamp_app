<% if user_signed_in? %>
  <div class="col-md-12">
    <% if current_user.participate?(stamp_rally) %>
      <%= link_to (t 'stamp_rallies.show.quit_participate'), stamp_rally_participant_path(stamp_rally),
                  class: 'btn btn-danger',
                  data: { "turbo-method": :delete } %>
    <% else %>
      <%= link_to (t 'stamp_rallies.show.participate'), stamp_rally_participant_path(stamp_rally),
                  class: 'btn btn-primary',
                  data: { "turbo-method": :post } %>
    <% end %>
  </div>
  <div class="col-md-12">
    <% if current_user.own?(stamp_rally) %>
      <%= link_to (t 'defaults.edit'), edit_stamp_rally_path(stamp_rally),
                  id: "button-edit-#{stamp_rally.id}" %>
      <%= link_to (t 'defaults.delete'), stamp_rally_path(stamp_rally),
                  id: "button-delete-#{stamp_rally.id}",
                  data: { "turbo-method": :delete } %>
    <% end %>
  </div>
<% end %>
