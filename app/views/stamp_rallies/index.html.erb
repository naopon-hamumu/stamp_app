<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <%= render 'shared/search_form' %>
    </div>
  </div>
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-bs-toggle="tab"
        href="#home" role="tab" aria-controls="home" aria-selected="true">
        <%= t '.home' %>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="own-tab" data-bs-toggle="tab"
        href="#own" role="tab" aria-controls="own" aria-selected="false">
        <%= t '.own' %>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="participate-tab" data-bs-toggle="tab"
        href="#participate" role="tab" aria-controls="participate" aria-selected="false">
        <%= t '.participate' %>
      </a>
    </li>
  </ul>
  <div class="tab-content mt-3" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <%= render 'stamp_rallies', stamp_rallies: @all_stamp_rallies %>
    </div>
    <div class="tab-pane fade" id="own" role="tabpanel" aria-labelledby="own-tab">
      <%= render 'stamp_rallies', stamp_rallies: @own_stamp_rallies %>
    </div>
    <div class="tab-pane fade" id="participate" role="tabpanel" aria-labelledby="participate-tab">
      <%= render 'stamp_rallies', stamp_rallies: @participate_stamp_rallies %>
    </div>
  </div>
</div>
